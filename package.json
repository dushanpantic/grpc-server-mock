{
  "name": "grpc-server-mock",
  "version": "0.0.4",
  "description": "",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "clean:dist": "rimraf dist",
    "clean:modules": "rimraf node_modules",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:cov": "jest -i --coverage --reporters=default --reporters=jest-junit",
    "build": "rimraf dist && tsc --project tsconfig.prod.json"
  },
  "bin": {
    "grpc-server-mock": "./dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dushanpantic/grpc-server-mock.git"
  },
  "keywords": [
    "grpc",
    "server",
    "mock",
    "proto"
  ],
  "author": {
    "name": "Dušan Pantić",
    "email": "dushan.pantic@gmail.com",
    "url": "https://github.com/dushanpantic"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dushanpantic/grpc-server-mock/issues"
  },
  "homepage": "https://github.com/dushanpantic/grpc-server-mock#readme",
  "dependencies": {
    "@grpc/grpc-js": "^1.3.7",
    "@grpc/proto-loader": "^0.6.5",
    "lodash": "^4.17.21",
    "yargs": "^17.2.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.173",
    "@types/node": "^16.9.6",
    "@types/sinon": "^10.0.3",
    "@types/yargs": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.1",
    "jest-junit": "^12.3.0",
    "jest-sonar-reporter": "^2.0.0",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.2",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../report/coverage",
    "testEnvironment": "node",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "testResultsProcessor": "jest-sonar-reporter",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "jest-junit": {
    "suiteName": "grpc-server-mock",
    "outputDirectory": "./report",
    "outputName": "junit.xml"
  }
}

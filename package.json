{
  "name": "grpc-server-mock",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "files": [
    "/src"
  ],
  "scripts": {
    "clean:dist": "rimraf dist",
    "clean:modules": "rimraf node_modules",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:cov": "jest -i --coverage --reporters=default --reporters=jest-junit",
    "build": "rimraf dist && tsc"
  },
  "bin": {
    "grpcServerMock": "./dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dushanpantic/grpc-server-mock.git"
  },
  "keywords": [
    "grpc",
    "server",
    "mock",
    "proto"
  ],
  "author": {
    "name": "Dušan Pantić",
    "email": "dushan.pantic@gmail.com",
    "url": "https://github.com/dushanpantic"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dushanpantic/grpc-server-mock/issues"
  },
  "homepage": "https://github.com/dushanpantic/grpc-server-mock#readme",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../report/coverage",
    "testEnvironment": "node",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "testResultsProcessor": "jest-sonar-reporter",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "jest-junit": {
    "suiteName": "grpc-server-mock",
    "outputDirectory": "./report",
    "outputName": "junit.xml"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.2.11",
    "@grpc/proto-loader": "^0.5.6",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.168",
    "@types/sinon": "^9.0.11",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "rimraf": "^3.0.2",
    "sinon": "^9.2.4",
    "ts-jest": "^26.5.3",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  }
}

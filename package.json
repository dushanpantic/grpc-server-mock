{
  "name": "grpc-server-mock",
  "version": "0.0.16",
  "description": "",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "clean:dist": "rimraf dist",
    "clean:modules": "rimraf node_modules",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:cov": "jest -i --coverage --reporters=default --reporters=jest-junit",
    "build": "rimraf dist && tsc --project tsconfig.prod.json"
  },
  "bin": {
    "grpc-server-mock": "./dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dushanpantic/grpc-server-mock.git"
  },
  "keywords": [
    "grpc",
    "server",
    "mock",
    "proto"
  ],
  "author": {
    "name": "Dušan Pantić",
    "email": "dushan.pantic@gmail.com",
    "url": "https://github.com/dushanpantic"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dushanpantic/grpc-server-mock/issues"
  },
  "homepage": "https://github.com/dushanpantic/grpc-server-mock#readme",
  "dependencies": {
    "@grpc/grpc-js": "^1.5.5",
    "@grpc/proto-loader": "^0.6.9",
    "yargs": "^17.3.1"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "16.11.7",
    "@types/sinon": "^10.0.11",
    "@types/yargs": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "jest-junit": "^13.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "rimraf": "^3.0.2",
    "sinon": "^13.0.1",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.5.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../report/coverage",
    "testEnvironment": "node",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "testResultsProcessor": "jest-sonar-reporter",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "jest-junit": {
    "suiteName": "grpc-server-mock",
    "outputDirectory": "./report",
    "outputName": "junit.xml"
  }
}
